  <script>
    const handleJSON = (s) => {
      if (s == null && s == "") { return }
      // Remove special characters, new lienes
      s = s.replace(/\\n/g, "\\n")  
          .replace(/\\'/g, "\\'")
          .replace(/\\"/g, '\\"')
          .replace(/\\&/g, "\\&")
          .replace(/\\r/g, "\\r")
          .replace(/\\t/g, "\\t")
          .replace(/\\b/g, "\\b")
          .replace(/\\f/g, "\\f")
          .replace(/[\u0000-\u0019]+/g,"")
          .replace(/\n/g, "\\n");
      return s = JSON.parse(s)
    }

    // ***
    const printTable = (data) =>{
      var tableBody = "<tbody id='tableBody'>"
      for (let i = 0; i < data.length; i++) {
        let tableRow = `
          <tr>
            <td>
              <div style="width: 60px; height: 60px; border-radius: 50%">
                <img src="http://104.236.159.193:3010/${data[i].foto}" onerror='this.onerror=null;  this.src="http://104.236.159.193:8850/images/logoamigoinvesa.png"' alt=""  style="max-height: 100%; max-width: 100%; border-radius: 50%">
              </div>
            </td>
            <td>${data[i].nombre}</td>
            <td>${data[i].correo ? data[i].correo : "-"}</td>
            <td class="text-center">${data[i].android == "1" ? '<i class="fab fa-android"></i>' : '<i class="fab fa-apple"></i>'}</td>
            <td class="text-center">${data[i].contactos}</td>
            <td class="text-center">${data[i].evaluaciones }</td>
            <td class="text-center">${data[i].registro_finalizado == 1 ? '<i class="fas fa-check"></i>' : '<i class="fas fa-times"></i>'}</td>
          </tr>
        `;
        console.log(tableRow)
        tableBody += tableRow
      }
      tableBody += "</tbody>"
      $("#tableUsuarios").append(tableBody);
      const tableObj = new simpleDatatables.DataTable("#tableUsuarios");   
    }

    var usuarios = '<%- usuarios %>';
        usuarios = handleJSON(usuarios);
        usuarios = usuarios.data;
    printTable(usuarios)
  </script>

